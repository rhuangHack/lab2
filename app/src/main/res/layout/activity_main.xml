<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.renda.myapplication.MainActivity">

    <EditText android:id="@+id/edit_message"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:textSize="20sp"
        android:hint="input"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"/>


    <Button  android:id="@+id/send_message"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/button_send"
        android:onClick="sendMessage"
        android:layout_below="@+id/Ok"
        android:layout_toRightOf="@+id/edit_message"
        android:layout_toEndOf="@+id/edit_message" />

    <Button
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/Ok"
        android:layout_alignTop="@+id/edit_message"
        android:layout_toRightOf="@+id/edit_message"
        android:layout_toEndOf="@+id/edit_message" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="say something"
        android:layout_alignBottom="@+id/edit_message"
        android:layout_toRightOf="@+id/edit_message"
        android:layout_toEndOf="@+id/edit_message" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:baselineAligned="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>


</RelativeLayout>
